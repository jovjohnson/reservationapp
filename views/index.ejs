<!DOCTYPE html>
<html>
  <head>
    <title>Reserve It</title>
    
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="stylesheets/style.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.js"></script>
	<script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  	<script src="/javascripts/module.js"></script>
  	<script src="/javascripts/controllers.js"></script>
  	<script src="/javascripts/services.js"></script>
  </head>
  <body ng-app='resApp' ng-controller='resCtrl'>
    <h1><i class="fa fa-cutlery fa-2x"></i>
 Reserve It</h1>
    <p></p>
		<div id="add">
		ADD A RESERVATION:
		<br>
		<br>
    <input type="text" placeholder="Party Name" ng-model='newRes.name'>
    <input type="datetime-local" ng-model='newRes.time'>
    <input type="number" placeholder="Party Size" ng-model='newRes.size'>
    <br>
    <br>
     Outdoor Seating: <input type="checkbox" ng-model='newRes.outdoor'>
    <button class="btn" ng-click='addReservation()'>Confirm Reservation</button>
		</div>

		<br>
		<br>
		<center>
		<table class="table striped" cellspacing="15">
			<tbody>
					<tr>
						<th>Time</th>
						<th>Name</th>
						<th>Size</th>
						<th>Outdoor Seating</th>
						<th>Check In</th>
						<th>Change</th>
						<th></th>
					</tr>
					<tr ng-repeat='reservation in reservations track by $index'>
					<td>{{reservation.time | date : 'short' }}</td>
					<td>{{reservation.name}}</td>
					<td>{{reservation.size}}</td>
					<td>{{reservation.outdoor}}</td>
					<td>{{reservation.checked}}</td>
					<td>
  						<button type="button" class="btn btn-info" data-toggle="modal" data-target=".bs-example-modal-lg" ng-click='edit(reservation._id)'>Edit</button>

						<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  						<div class="modal-dialog modal-lg">
    						<div class="modal-content">
     							<input type="text" placeholder="Party Name" ng-model='updateRes.name'>
    							<input type="datetime-local" ng-model='updateRes.time'>
    							<input type="number" placeholder="Party Size" ng-model='updateRes.size'>
     							Outdoor Seating: <input type="checkbox" ng-model='updateRes.outdoor'>
     							Checked In: <input type="checkbox" ng-model='updateRes.checked'>
    							<button ng-click='updateReservation()'>Update Reservation</button>
									</div>
    						</div>
  						</div>
						</div>
				  </td>
				  <td><button class="btn btn-danger" ng-click='deleteRes()'><i class="fa fa-trash-o fa-fw"></i></button></td>
					</tr>
			</tbody>
		</table>
		</center>
		<!-- <pre>
			{{reservations | json }}

		</pre> -->
			
  </body>
</html>
